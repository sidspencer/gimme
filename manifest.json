{
  "manifest_version": 2,

  "name": "GimmeGimmeGimme",
  "description": "Shortcut to downloading. Named in honor of Black Flag's song, Gimme Gimme Gimme.",
  "version": "0.1.0",
  "offline_enabled": true,

  "icons": {
    "16": "media/icon16.png",
    "24": "media/icon24.png",
    "32": "media/icon32.png",
    "64": "media/icon64.png"
  },

  "background": {
    "page": "background/background.html"
  },

  "content_scripts" : [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/ContentPeeper.js"
      ],
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "media/icon16.png",
      "24": "media/icon24.png",
      "32": "media/icon32.png",
      "64": "media/icon64.png"
    },
    "default_popup": "popup/popup.html"
  },

  "options_page": "options/options.html",
  
  "permissions": [
    "activeTab",
    "webRequest",
    "alarms",
    "downloads",
    "storage",
    "http://*/*",
    "https://*/*",
    "file:///*/*"
  ],

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
